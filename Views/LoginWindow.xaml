<Window x:Class="CzatuCzatu.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie - CzatuCzatu" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#F7F9FC">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Logowanie" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Użytkownik:"/>
            <TextBox x:Name="TxtUsername" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

            <TextBlock Text="Hasło:"/>
            <Grid Height="30" Margin="0,5,0,25">
                <PasswordBox x:Name="TxtPassword" Panel.ZIndex="0" Height="30" Padding="5,0,35,0" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TxtVisiblePassword" Panel.ZIndex="0" Height="30" Padding="5,0,35,0" VerticalContentAlignment="Center" Visibility="Collapsed"/>

                <Border x:Name="BtnShowPassword"
                        Panel.ZIndex="1"
                        HorizontalAlignment="Right" Width="30" Height="28" 
                        Background="Transparent" Cursor="Hand" Margin="0,1,1,1"
                        PreviewMouseDown="BtnShowPassword_MouseDown" 
                        PreviewMouseUp="BtnShowPassword_MouseUp" 
                        MouseLeave="BtnShowPassword_MouseLeave">
                    <TextBlock Text="👁" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAA" IsHitTestVisible="False"/>
                </Border>
            </Grid>

            <Button x:Name="BtnLogin" Content="Zaloguj się" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="BtnLogin_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="BtnGoToRegister" Content="Nie masz konta? Zarejestruj się" Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="0,10" Click="BtnGoToRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>