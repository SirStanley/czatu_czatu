<Window x:Class="CzatuCzatu.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CzatuCzatu.Views"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F7F9FC">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="#007ACC" Width="80" Height="80" CornerRadius="20" Margin="0,0,0,20">
                    <TextBlock Text="💬" FontSize="40" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <TextBlock Text="Witamy w czatu-czatu" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#333" 
                   HorizontalAlignment="Center"/>

                <TextBlock Text="Twoje bezpieczne miejsce do rozmów" 
                   FontSize="14" 
                   Foreground="#777" 
                   Margin="0,5,0,40"
                   HorizontalAlignment="Center"/>

                <Button x:Name="BtnGoToLogin" 
                Content="Zaloguj się" 
                Width="220" Height="45" 
                Background="#007ACC" Foreground="White" 
                FontSize="16" FontWeight="SemiBold"
                BorderThickness="0" Margin="0,5"
                Click="BtnGoToLogin_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="BtnGoToRegister" 
                Content="Zarejestruj się" 
                Width="220" Height="45" 
                Background="White" Foreground="#007ACC" 
                FontSize="16" FontWeight="SemiBold"
                BorderBrush="#007ACC" BorderThickness="1" Margin="0,5"
                Click="BtnGoToRegister_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
</Window>
