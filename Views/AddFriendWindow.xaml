<Window x:Class="CzatuCzatu.Views.AddFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj znajomego" Height="250" Width="400" 
        WindowStartupLocation="CenterOwner" Background="#F7F9FC" ResizeMode="NoResize">

    <Grid>
        <Border Padding="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Dodaj nowego znajomego" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15" 
                           HorizontalAlignment="Center" 
                           Foreground="#333"/>

                <TextBlock Text="Wpisz nazwę użytkownika lub ID:" 
                           Margin="0,0,0,5" 
                           Foreground="#666"/>

                <TextBox x:Name="TxtSearch" 
                         Height="35" 
                         VerticalContentAlignment="Center" 
                         Padding="5"/>

                <Button x:Name="BtnAdd" 
                        Content="Wyślij zaproszenie" 
                        Height="40" 
                        Margin="0,20,0,0"
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="BtnAdd_Click"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>