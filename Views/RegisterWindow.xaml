<Window x:Class="CzatuCzatu.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejestracja - CzatuCzatu" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#F7F9FC">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Stwórz konto" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Nazwa użytkownika:"/>
            <TextBox x:Name="TxtUsername" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

            <TextBlock Text="Hasło:"/>
            <Grid Height="30" Margin="0,5,0,15">
                <PasswordBox x:Name="TxtPassword" Height="30" Padding="5,0,30,0" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TxtVisiblePassword" Height="30" Padding="5,0,30,0" VerticalContentAlignment="Center" Visibility="Collapsed"/>
            </Grid>

            <TextBlock Text="Powtórz hasło:"/>
            <Grid Height="30" Margin="0,5,0,25">
                <PasswordBox x:Name="TxtConfirmPassword" Height="30" Padding="5,0,30,0" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TxtVisibleConfirmPassword" Height="30" Padding="5,0,30,0" VerticalContentAlignment="Center" Visibility="Collapsed"/>

                <Border x:Name="BtnShowAllPasswords"
                        HorizontalAlignment="Right" Width="30" Height="28" 
                        Background="Transparent" Cursor="Hand" Margin="0,1,1,1"
                        PreviewMouseDown="BtnShowAllPasswords_MouseDown" 
                        PreviewMouseUp="BtnShowAllPasswords_MouseUp" 
                        MouseLeave="BtnShowAllPasswords_MouseLeave">
                    <TextBlock Text="👁" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAA"/>
                </Border>
            </Grid>

            <Button x:Name="BtnRegister" Content="Zarejestruj się" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="BtnRegister_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="BtnBack" Content="Powrót do logowania" Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="0,10" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>