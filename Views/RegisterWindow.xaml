<Window x:Class="CzatuCzatu.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CzatuCzatu.Views"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid Background="#F7F9FC">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Stwórz konto" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Nazwa użytkownika:"/>
            <TextBox x:Name="TxtUsername" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <TextBlock Text="Hasło:"/>
            <PasswordBox x:Name="TxtPassword" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <TextBlock Text="Powtórz hasło:"/>
            <PasswordBox x:Name="TxtConfirmPassword" Height="30" Margin="0,5,0,25" VerticalContentAlignment="Center"/>

            <Button x:Name="BtnRegister" Content="Zarejestruj się" Height="40" Background="#007ACC" Foreground="White" Click="BtnRegister_Click"/>

            <Button x:Name="BtnBack" Content="Powrót" Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="0,10" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
