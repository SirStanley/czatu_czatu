<Window x:Class="CzatuCzatu.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejestracja - CzatuCzatu" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#F7F9FC">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
            <TextBlock Text="Stwórz konto" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Nazwa użytkownika:"/>
            <TextBox x:Name="TxtUsername" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

            <TextBlock Text="Hasło:"/>
            <Grid Height="30" Margin="0,5,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <PasswordBox x:Name="TxtPassword" Height="30" Padding="5,0" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="TxtVisiblePassword" Height="30" Padding="5,0" VerticalContentAlignment="Center" Visibility="Collapsed"/>
                </Grid>

                <Border Grid.Column="1" Margin="5,0,0,0" Background="#E0E6ED" CornerRadius="4" Cursor="Hand"
                        PreviewMouseDown="BtnShowPassword_MouseDown" 
                        PreviewMouseUp="BtnShowPassword_MouseUp" 
                        MouseLeave="BtnShowPassword_MouseUp">
                    <TextBlock Text="👁" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#555"/>
                </Border>
            </Grid>

            <TextBlock Text="Powtórz hasło:"/>
            <Grid Height="30" Margin="0,5,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <PasswordBox x:Name="TxtConfirmPassword" Height="30" Padding="5,0" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="TxtVisibleConfirmPassword" Height="30" Padding="5,0" VerticalContentAlignment="Center" Visibility="Collapsed"/>
                </Grid>

                <Border Grid.Column="1" Margin="5,0,0,0" Background="#E0E6ED" CornerRadius="4" Cursor="Hand"
                        PreviewMouseDown="BtnShowConfirmPassword_MouseDown" 
                        PreviewMouseUp="BtnShowConfirmPassword_MouseUp" 
                        MouseLeave="BtnShowConfirmPassword_MouseUp">
                    <TextBlock Text="👁" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#555"/>
                </Border>
            </Grid>

            <Button x:Name="BtnRegister" Content="Zarejestruj się" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="BtnRegister_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="BtnBack" Content="Powrót do logowania" Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="0,10" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>