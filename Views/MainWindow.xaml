<Window x:Class="CzatuCzatu.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Czatu-Czatu" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#D1D1D1" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#F8F9FA" Padding="15">
                    <Grid>
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock x:Name="LblCurrentUsername" Text="Mój Profil" FontSize="18" FontWeight="Bold" Foreground="#007ACC"/>
                            <TextBlock Text="Dostępny" FontSize="12" Foreground="Green"/>
                        </StackPanel>

                        <Button x:Name="BtnLogout" Width="36" Height="36" Click="BtnLogout_Click"
        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
        Cursor="Hand" ToolTip="Wyloguj">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse x:Name="Background" Fill="#FF4444"/>

                                        <Canvas Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Path Stroke="White" StrokeThickness="2" 
                          Data="M 10,2 L 10,10" />
                                            <Path Stroke="White" StrokeThickness="2" 
                          Data="M 6,5 A 7,7 0 1 0 14,5" />
                                        </Canvas>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Background" Property="Fill" Value="#CC0000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <ListBox Grid.Row="1" x:Name="LstContacts" BorderThickness="0" Background="Transparent" Margin="5" SelectionChanged="LstContacts_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ItemBorder" Background="Transparent" CornerRadius="12" Margin="2" Padding="8">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Grid Margin="0,0,12,0">
                                            <Ellipse Width="44" Height="44" Fill="{Binding StatusColor}" Opacity="0.5"/>
                                            <Border Background="#007ACC" Width="36" Height="36" CornerRadius="18" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name[0]}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="15" FontWeight="SemiBold" Foreground="#333"/>
                                    </StackPanel>

                                    <Border Background="#FF4444" CornerRadius="8" Padding="5,1" 
                            HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                            Margin="0,0,5,2"
                            Visibility="{Binding NewBadgeVisibility}">
                                        <TextBlock Text="NEW" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <DataTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ItemBorder" Property="Background" Value="#E7F3FF"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="ItemBorder" Property="Background" Value="#E7F3FF"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <Button Grid.Row="2" Content="+ Dodaj znajomego" 
                        Style="{StaticResource ModernButton}" 
                        Margin="15" Height="40" Click="BtnAddFriend_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" Padding="15,0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="LblChatPartner" Text="Wybierz osobę z listy" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" x:Name="ChatScrollViewer" Background="#E5DDD5">
                <ItemsControl x:Name="ChatItemsControl" Margin="10"/>
            </ScrollViewer>

            <Border Grid.Row="2" Background="White" BorderBrush="#D1D1D1" BorderThickness="0,1,0,0" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="📎" FontSize="20" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"/>

                    <TextBox Grid.Column="1" x:Name="TxtMessage" Padding="10" FontSize="14" VerticalContentAlignment="Center" BorderBrush="#D1D1D1">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button Grid.Column="2" x:Name="BtnSendMessage" Content="Wyślij" 
                            Style="{StaticResource ModernButton}" 
                            Width="80" Margin="10,0,0,0" Click="BtnSendMessage_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>